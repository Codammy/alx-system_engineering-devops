#!/usr/bin/env bash
# Install and configure HAproxy on your lb-01 server.

sudo apt-get update
sudo apt-get install -y haproxy
sudo echo -e "
frontend test_proxy
\tbind *:80
\tdefault_backend proxy_backend\n
backend proxy_backend
\tbalance roundrobin
\tserver server1 100.26.154.206 check
\tserver server2 54.144.249.31 check" >> /etc/haproxy/haproxy.cfg
sudo /etc/init.d/haproxy restart
